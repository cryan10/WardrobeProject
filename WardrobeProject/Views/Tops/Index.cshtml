

@model IEnumerable<WardrobeProject.Models.Top>

@{
    ViewBag.Title = "My Tops";
}

<head>
    <link href="~/Content/ItemViewSheet.css" type="text/css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Anton|Francois+One|Oswald" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Leckerli+One" rel="stylesheet">

</head>

<div class="title">
<h1>My Tops</h1>
<p>
    @Html.ActionLink("Add a New Top", "Create")
</p>
    </div>
<table class="table">
    <tr>
        <th>
          Photo
        </th>
        <th>
            Top's Name
        </th>
        <th>
            Occasion
        </th>
        <th>
            Color
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Content/Images/Tops/top6.jpg" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopColor)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TopID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TopID })
            </td>
        </tr>
    }

</table>