@model IEnumerable<WardrobeProject.Models.Bottom>

@{
    ViewBag.Title = "My Bottoms";
}

<head>
    <link href="~/Content/ItemViewSheet.css" type="text/css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Anton|Francois+One|Oswald" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Leckerli+One" rel="stylesheet">

</head>

<div class="title">
    <h1>My Bottoms</h1>
    <p>
        @Html.ActionLink("Add a New Pair of Bottoms", "Create")
    </p>
</div>
<table class="table">
    <tr>
        <th>
            Photo
        </th>
        <th>
            Description
        </th>
        <th>
            Occasion
        </th>
        <th>
            Color
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Content/Images/Bottoms/Bottoms2.jpg" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottomName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottomType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottomColor)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BottomID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BottomID })
        </td>
    </tr>
}

</table>
